---
import { Image } from "astro:assets";
import Logo from "../../images/superist-logo.svg";
import LocationPin from "../../images/location-pin.svg";
import FooterMessageIcon from "../../images/icons/footer-icon-message.svg";
import FooterPhoneIcon from "../../images/icons/footer-icon-phone.svg";
import FooterEmailIcon from "../../images/icons/footer-icon-email.svg";
import FooterConsulIcon from "../../images/icons/footer-icon-consultation.svg";

const currentLang = Astro.url.pathname.split('/')[1];
---
<footer class="bg-black-bg py-[4rem] text-white-peral">
    <div class="container grid grid-cols-1 md:grid-cols-12">
        <div class="md:col-span-3 md:col-start-2">
            <Image class="block max-w-[187px] md:max-w-[137px] mx-auto md:mx-0 mb-[15px]" src={Logo} alt="Superist Logo" width="137"/>
            <div class="mb-[2.5rem]">
                <div class="office flex items-start mb-[1rem]">
                    <Image class="mr-[15px]" src={LocationPin} alt="Location"/>
                    <div class="office-address text-[14px]">
                        {(currentLang === "en")? 
                            <h4 class="font-bold mb-[2px] uppercase font-nimbus-sans">Hong Kong</h4>
                            <p class="font-[300] leading-[1.7]">
                                3/F, Sun House, <br/>
                                90 Connaught Road Central, <br/>
                                Sheung Wan, Hong Kong <br/>
                            </p>
                        :
                            <p class="font-[300] leading-[1.7]">
                                上環干諾道中90號大新行3樓
                            </p>
                        }
                        
                    </div>
                </div>
                <!-- <div class="office flex items-start mb-[1rem]">
                    <Image class="mr-[15px]" src={LocationPin} alt="Location"/>
                    <div class="office-address text-[14px]">
                        {(currentLang === "en")?
                            <h4 class="font-bold mb-[2px] uppercase font-nimbus-sans">Shenzhen</h4>
                            <p class="font-[300] leading-[1.7]">COMING SOON</p>
                        :
                            <h4 class="font-bold mb-[2px] uppercase font-nimbus-sans">深圳</h4>
                            <p class="font-[300] leading-[1.7]">即将来临</p>
                        }
                    </div>
                </div> -->
                <div class="flex text-[14px] mb-[1rem] whitespace-nowrap">
                    <i class="fa-solid fa-envelope text-[22px] mr-[10px]"></i> HELLO@SUPERIST.COM
                </div>
            </div>
        </div>
        <div class="md:col-span-10 md:col-start-2 pt-[1rem] border-t-[1px] border-white-peral">
            <div class="grid grid-cols-1 md:grid-cols-2 text-center md:text-left place-content-between">
                <p class="footer-statement text-[14px]">© {new Date().getFullYear()} Superist. All rights reserved</p>
                {(currentLang === "en")? 
                    <a class="place-self-center md:place-self-end" href={`/${currentLang}/terms-of-business`}>Terms of Business</a>
                :''}
            </div>
        </div>
    </div> 
</footer>

<style lang="scss">
    .footer-menu {
        li {
            @apply 
            inline-block;

            h4 {
                @apply
                font-bold
                text-[18px]
                font-nimbus-sans
                uppercase
                mb-[10px];
            }

            .footer-sub-menu {
            @apply
            pr-[20px];

                li {
                    @apply
                    w-full
                    leading-[1.3]
                    mb-[1rem];

                    a {
                        @apply
                        block
                        text-[14px]
                        font-[300]
                        mb-[5px];
                    }
                }
            }
        }
    }

    .footer-social {
        li {
            @apply
            ml-[10px];
        }
    }
</style>