---
import Layout from '../../layouts/Layout.astro';
import { Image } from "astro:assets";

// Global components
import Header from '../../components/common/Header.astro';
import Footer from '../../components/common/Footer.astro';
import Clients from '../../components/Clients.astro';
import MarketingSolutions from '../../components/MarketingSolutions.astro';
import Partners from '../../components/Partners.astro';
import Testimonials from '../../components/Testimonials.astro';

// Forms
import HeroForm from "../../forms/HeroForm.astro";
import { PopupForm } from "../../forms/PopupForm";

// Buttons
import { CtaButton } from '../../components/ui/buttons/CtaButton';

// Images
import heroBg from "../../images/home-hero-bg.jpg";
import heroBgMobile from "../../images/home-hero-bg-mobile.jpg";
import leadImg1 from "../../images/lead-img-1.jpg";
import leadImg2 from "../../images/lead-img-2.jpg";
import StarSrc from '../../images/icons/rate-star.svg';
import enquireImg from "../../images/square-crystal.jpg";
import iPad from "../../images/ipad-sentr.png";
