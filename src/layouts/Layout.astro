<style is:global lang="scss">
	html {
		@apply
		antialiased
		bg-white-peral;
		font-family: 'nimbus-sans', sans-serif;
	}

	body {
		&.fix {
			overflow: hidden;
		}
	}

	h1,h2,h3,h4,h5 {
		@apply
		font-termina;
	}

	h1 {
		font-size: 2rem;
		font-weight: 600;
		line-height: 1.2;

		@media (min-width: 1280px) {
			font-size: 3.5rem;
		}
	}

	h2 {
		font-size: 1.4rem;
		font-weight: 600;
		line-height: 1.2;

		@media (min-width: 1280px) {
			font-size: 2.0rem;
		}
	}

	h3 {
		font-size: 1.1rem;
		font-weight: 600;
		line-height: 1.2;

		@media (min-width: 1280px) {
			font-size: 1.5rem;
		}
	}

	h4 {
		font-size: 0.7rem;
		font-weight: 600;
		line-height: 1.2;

		@media (min-width: 1280px) {
			font-size: 1.2rem;
		}
	}

	p,
	ul li {
		font-family: 'nimbus-sans-ext', sans-serif;
		font-size: 1rem;
		line-height: 25.2px;
		font-weight: 400;
		color: #667085;
	}
	
	.para {
		p {
			@apply
			mb-4;

			&:last-child {
				@apply
				mb-0;
			}

			a {
				text-decoration: underline;
			}
		}

		ul {
			@apply
			pl-5
			mb-5;

			li {
				@apply
				list-disc
				mb-1;
			}
		}

		.hidden-content {
			p {
				&:last-child {
					@apply
					mb-4;
				}
			}
		}
	}

	.page-header-bg {
		@apply
		hidden 
		sm:block 
		absolute 
		right-0 
		object-cover 
		w-full 
		h-full;
	}

	.subtitle {
		font-family: 'termina', sans-serif;
		font-size: 1.1rem;
		font-weight: 500;
		line-height: 1.4;

		@media (min-width: 1280px) {
			font-size: 1.5rem;
		}
	}
	
	.pre_title {
		font-family: 'nimbus-sans-ext', sans-serif;
		font-size: 0.8rem;
		font-weight: 700;
	}

	section {
		margin: 3rem 0;

		@media (min-width: 1280px) {
			margin: 4rem 0;
		}
	}

	.section-title {
		@apply
		mb-[1.5rem];
	}

	.container {
		&.container-narrow {
			@apply
			max-w-[1090px];
		}
	}

	.blue-text-highlight {
		display: inline;
		position: relative;
		background-image: linear-gradient(transparent calc(60% - 1px),#1057FF 5px);
		background-size: 100% 90%;
		background-repeat: no-repeat;
		padding: 0 0.3rem;
	}

	.mobile-slider {
		.slick-track {
			display:flex;

			.card-box {
				height:inherit;
			}
		}
        .slick-dots {
            li {
                button {
					@apply
					w-[15px]
					h-[15px];

                    &::before {
						@apply
						content-['']
						opacity-100
						w-[15px]
						h-[15px]
						rounded-[100%]
						border-[2px]
						border-gray-light;
                    }
                }

				&.slick-active {
					button {
						&::before {
							@apply
							opacity-100
							bg-blue-main
							border-blue-main;
						}
					}
				}
            }
        }
    }
</style>
